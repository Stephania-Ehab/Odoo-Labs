<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="history"/>
                <field name="blood_type"/>
                <field name="department_id"/>
                <field name="state"/>

            </tree>
        </field>
    </record>

    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">patient.form.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_undetermined"
                            type="object"
                            class="btn-primary"
                            string="Undetermined"
                            invisible="state != 'undetermined'"
                            />
                    <button name="action_good"
                            type="object"
                            class="btn-success"
                            string="Good"
                            invisible="state != 'good'"
                            />
                    <button name="action_fair"
                            type="object"
                            class="btn-info"
                            string="Fair"
                            invisible="state != 'fair'"
                            />
                    <button name="action_serious"
                            type="object"
                            class="btn-danger"
                            string="Serious"
                            invisible="state != 'serious'"
                            />


                    <button name="action_add_history_wizard"
                            type="object"
                            class="btn-secondary"
                            string="Add/Change History"
                            />

                    <field name="state"
                           widget="statusbar"
                           options="{'clickable': '1'}"
                            />
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="history"/>
                            <field name="blood_type"/>
                            <field name="state"/>



                        </group>

                        <group>
                        <field name="cr_ratio"/>
                        <field name="pcr"/>
                        <field name="image" />
                        <field name="address"/>
                        <field name="department_id"/>
                        </group>

                        <group>
                            <field name="department_id"/>
                            <field name="department_capacity" readonly="1"/>
                            <field name="doctor_id"/>
                        </group>

                    </group>

                    <notebook>
                        <page string="Logs">
                            <field name="log_history">
                                <tree editable="bottom">
                                    <field name="create_uid"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="hms_patient_action" model="ir.actions.act_window">
<!--        <field name="name">Patients List</field>-->
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menuitem_hms_patient"
              name="All Patient"
              parent="menu_root_patient"
              action="hms_patient_action"/>
</odoo>